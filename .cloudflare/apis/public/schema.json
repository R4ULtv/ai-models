{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 200
    },
    "provider": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "provider_id": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["tools", "vision", "reasoning", "embedding"]
      }
    },
    "attachment": {
      "type": "boolean"
    },
    "temperature": {
      "type": "boolean"
    },
    "knowledge": {
      "type": "string"
    },
    "modalities": {
      "type": "object",
      "properties": {
        "input": {
          "minItems": 1,
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["text", "audio", "image", "video", "pdf"]
          }
        },
        "output": {
          "minItems": 1,
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["text", "audio", "image", "video", "pdf"]
          }
        }
      },
      "required": ["input", "output"],
      "additionalProperties": false
    },
    "cost": {
      "type": "object",
      "properties": {
        "input": {
          "type": "number",
          "minimum": 0
        },
        "output": {
          "type": "number",
          "minimum": 0
        },
        "cache_read": {
          "type": "number",
          "minimum": 0
        },
        "cache_write": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "limit": {
      "type": "object",
      "properties": {
        "context": {
          "type": "number",
          "minimum": 1
        },
        "output": {
          "type": "number",
          "minimum": 1
        }
      },
      "required": ["context", "output"],
      "additionalProperties": false
    },
    "size": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0
      }
    }
  },
  "required": [
    "id",
    "name",
    "provider",
    "provider_id",
    "capabilities",
    "attachment",
    "temperature",
    "modalities",
    "cost",
    "limit",
    "size"
  ],
  "additionalProperties": false
}
